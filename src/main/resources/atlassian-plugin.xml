  <rest name="Workflow Action Handler Resource" i18n-name-key="workflow-action-handler-resource.name" key="workflow-action-handler-resource" path="/workflowactionhandler" version="1.0"> 
    <description key="workflow-action-handler-resource.description">The Workflow Action Handler Resource Plugin</description> 
