  <issue-tabpanel key="my-issue-tab-panel" name="My Issue Tab Panel" i18n-name-key="my-issue-tab-panel.name" class="dev.jira.jira.tabpanels.MyIssueTabPanel"> 
    <description key="my-issue-tab-panel.description">The My Issue Tab Panel Plugin</description>  
    <label key="my-issue-tab-panel.label"/>  
    <order>100</order>  
    <resource type="velocity" name="view" location="templates/tabpanels/my-issue-tab-panel.vm"/> 

    <dependency>com.atlassian.auiplugin:soy</dependency>
    <resource type="soy" name="sample" location="templates/samples/sample.soy"/> 
    <transformation extension="soy"> 
      <transformer key="soyTransformer"/> 
    </transformation>  
    <resource type="download" name="sample.soy.js" location="templates/samples/sample.soy"/> 
  </issue-tabpanel>  

